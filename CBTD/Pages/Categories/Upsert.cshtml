@page
@model CBTD.Pages.Categories.UpsertModel
@{
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">@(Model.objCategory.CategoryId != 0 ? "Update " : "Create ") Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="objCategory.CategoryName"  class="form-control border-0 shadow" />
                    <label asp-for="objCategory.CategoryName"  class="ms-2"></label>
                    <span asp-validation-for="objCategory.CategoryName" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objCategory.DisplayOrder" class="form-control border-0 shadow" />
                    <label asp-for="objCategory.DisplayOrder" class="ms-2">Display Order</label>
                    <span asp-validation-for="objCategory.DisplayOrder" class="text-danger"></span>

                </div>
                @if (Model.objCategory.CategoryId != 0)
                {
                    <input type="hidden" asp-for="objCategory.CategoryId" />
                }


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create/Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page = "Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
